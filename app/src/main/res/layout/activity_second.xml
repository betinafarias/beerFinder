<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
	android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="diegocunha.beersfinder.secondActivity">

    <TextView 
		android:text="Menu Principal"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posição"
        android:id="@+id/button"
        android:layout_marginTop="62dp"
        android:onClick="BarProximo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Busca"
        android:id="@+id/btnLista"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="AbreLista"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bares no Mapa"
        android:id="@+id/btnBarAllMaps"
        android:onClick="AbreMaps"
        android:layout_below="@+id/btnLista"
        android:layout_alignRight="@+id/btnLista"
        android:layout_alignEnd="@+id/btnLista"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fb"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="OpenFace"
        android:background="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bares no Mapa"
        android:id="@+id/btnFavoritos"
        android:onClick="abre_favs"
        android:layout_below="@+id/btnBarAllMaps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnBarAllMaps"
        android:layout_alignEnd="@+id/btnBarAllMaps" />


</RelativeLayout>
