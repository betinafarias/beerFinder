<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
	android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="diegocunha.beersfinder.secondActivity">

    <TextView 
		android:text="Menu Principal"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="@color/black_overlay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="BarProximo"
        android:src="@drawable/posicao2"
        android:background="@null"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/btnLista"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLista"
        android:src="@drawable/lupa"
        android:background="@null"
        android:onClick="AbreLista"
        android:layout_alignTop="@+id/btnFavoritos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bares no Mapa"
        android:id="@+id/btnBarAllMaps"
        android:onClick="AbreMaps"
        android:src="@drawable/globo2"
        android:background="@null"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fb"
        android:onClick="OpenFace"
        android:background="@null"
        android:layout_alignTop="@+id/btnBarAllMaps"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:src="@drawable/favorites"
        android:layout_width="wrap_content"
        android:background="@null"
        android:id="@+id/btnFavoritos"
        android:onClick="abre_favs"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnBarAllMaps"
        android:layout_alignStart="@+id/btnBarAllMaps" />


</RelativeLayout>
