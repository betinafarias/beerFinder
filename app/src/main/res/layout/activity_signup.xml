<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4B748E"
    tools:context="diegocunha.beersfinder.SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UsuÃ¡rio: "
        android:textSize="30dp"
        android:id="@+id/lblUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha: "
        android:textSize="30dp"
        android:id="@+id/lblPass"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lblUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail: "
        android:textSize="30dp"
        android:id="@+id/lblMail"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/lblPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="#fffeee86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:id="@+id/btnSignUP"
        android:layout_below="@+id/lblMail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="sig"/>

    <Button
        android:background="#fffeee86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retornar"
        android:id="@+id/btnVolta"
        android:layout_below="@+id/btnSignUP"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <EditText
        android:hint="username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtUser"
        android:layout_above="@+id/lblPass"
        android:layout_toRightOf="@+id/lblUser"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:hint="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPass"
        android:layout_alignBottom="@+id/lblPass"
        android:layout_toEndOf="@+id/lblUser"
        android:layout_toRightOf="@+id/lblUser" />

    <EditText
        android:hint="E-mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtMail"
        android:layout_alignBottom="@+id/lblMail"
        android:layout_alignLeft="@+id/edtPass"
        android:layout_alignStart="@+id/edtPass" />

</RelativeLayout>
